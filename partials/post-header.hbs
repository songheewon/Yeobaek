<header class='c-post-header'>
  <div class="c-post-header__brand">
    {{@site.brand_site_title}}
  </div>
  <h1 class='c-post-header__title'>{{ title }}</h1>

  {{#if custom_excerpt}}
  <p class='c-post-header__excerpt'>{{ custom_excerpt }}</p>
  {{/if}}

  {{#is 'post'}}
  <div class="c-post-header__meta">
    {{#primary_author}}
    <div class="c-post-header__author">by {{name}}</div>
    {{/primary_author}}
    <div class="c-post-header__date">
      <time class='c-post-header__date' datetime='{{ date format=' YYYY.MM.DD' }}'>{{ date format='YYYY.MM.DD' }}</time>
    </div>
    <div class="c-post-header__comment">
      <a href="{{url absolute=" true"}}comments" class="c-post-community__comment" data-portal="comment"
        data-post-uuid="{{ uuid }}">
        댓글({{comment_count}})
      </a>
    </div>
  </div>
  {{/is}}

  {{!-- {{#if feature_image}}
  <figure class='c-post-media'>
    <img alt="{{#if feature_image_alt}}{{ feature_image_alt }}{{ else }}{{ title }}{{/if}}"
      class='c-post-media__image lazyload' data-src='{{ img_url feature_image size=' post-image-large' }}'>
    {{#if feature_image_caption}}
    <figcaption class='c-post-media__caption'>{{ feature_image_caption }}</figcaption>
    {{/if}}
  </figure>
  {{/if}} --}}
</header>